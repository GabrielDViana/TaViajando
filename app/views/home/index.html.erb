<section id="main">
  <div class="container">
    <div class="row col-sm-10 col-sm-offset-1 distance">
      <h1>Tá viajando?</h1>
      <div class="col-sm-6">
        <div class="wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="300ms">
          <p>Um Ebook interativo que é divertido </p>
          <p>e inovador voltado para as pessoas  </p>
          <p>de todas as idades. </p>
        </div>
        <h2>Tá viajando?</h2>
      </div>
      <div class="col-sm-6 imac-image">
        <div class="what-is wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="300ms">
        </div>
      </div>
    </div>
  </div>
</section>
<div class="border2"></div>

  <section id="projeto">
      <%= render :template => "home/projeto"%>
  </section>
  <div class="border2"></div>

  <section id="livro">
      <%= render :template => "home/livro"%>
  </section>
  <div class="border2"></div>

  <section id="autora">
      <%= render :template => "home/autora"%>
  </section>
  <div class="border2"></div>

  <section id="atendimento">
    <div id="contact-us">
      <div class="container">
        <%= render :template => "home/atendimento"%>
      </div>
    </div>
  </section>

  <div class="container-content">
      <div class="container">
          <%= form_tag(send_mail_path) do %>
              <div class="form-group">
                  <%= label_tag 'name', 'Name' %>
                  <%= text_field_tag 'name', nil, class: 'form-control', placeholder: 'Your Name' %>
              </div>
             <div class="form-group">
                 <%= label_tag 'email', 'Email' %>
                 <%= email_field_tag 'email', nil, class: 'form-control', placeholder: 'Your Email Address' %>
             </div>
             <div class="form-group">
                 <%= label_tag 'comments', 'Comments' %>
                 <%= text_area_tag 'comments', nil, class: 'form-control', rows: 4, placeholder: 'Comments...' %>
             </div>
             <%= submit_tag nil, class: 'btn btn-default btn-about pull-right' %>
         <% end %>
    </div>
  </div>
